# База данных
# Параметры пула соединений помогают предотвратить ошибки закрытия соединения
# connection_limit - максимальное количество соединений в пуле
# pool_timeout - время ожидания доступного соединения (в секундах)
DATABASE_URL="postgresql://user:password@localhost:5432/fast_analytics?schema=public&connection_limit=10&pool_timeout=20"

# JWT секретный ключ (используйте надежный ключ в продакшене!)
JWT_SECRET="your-secret-key-change-in-production"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-change-in-production"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Окружение (development/production)
# NODE_ENV="development"

